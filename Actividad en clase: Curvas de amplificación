install.packages("pacman") #es un paquete que llama a otros paquetes y si no están los instala

library ("pacman") #esta función llama al paquete instalado

p_load("ggplot2", #para graficar
       "dplyr", #para facilitar el manejo de datos
       "vroom") #para llamar repositorios

Datos_curvas <- vroom(file="https://raw.githubusercontent.com/ManuelLaraMVZ/resultados_PCR_practica/refs/heads/main/Amplif_grupo1_17022025.csv")
head(Datos_curvas) #solo para que me de los 6 primeros datos

Curva_1 <- Datos_curvas %>% #el nuevo objeto va a tener una asignación a partir de la bases de datos XX, y le hacemos lo siguiente
  select("Cycle","B1")
Curva_1

Grafica_curva <- ggplot(Curva_1,
                        mapping = aes(x = Cycle,
                                      y = B1))+
  geom_point()+
  geom_line(color="red",
            size=1.2)

Grafica_curva

Grafica_curva_2 <- Grafica_curva+
  labs(x="ciclos",
       y="Fluorescencia",
       title = "Creado por: Aitana Barrientos",
       subtitle = "Grafica B1",
       caption = "Ejercicio 3")+
  theme_classic()

Grafica_curva_2
